@model FrontendPrincipal.Models.Casa

@{
    ViewData["Title"] = "Confirmar Reserva";
}

<div class="container mt-4">
    <h1 class="mb-4">Confirmar Reserva</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Nombre</h5>
            <p class="card-text">
                <strong>Ubicación:</strong> @Model.Ubicacion<br />
                <strong>Precio:</strong> $@Model.Precios<br />
                @Model.Descripcion
            </p>
        </div>
    </div>

    <div class="mt-4">
        <!-- Botón para confirmar la reserva -->
        <form asp-action="RealizarReserva" method="post">
            <input type="hidden" name="idCasa" value="@Model.IdCasa" />
            <label for="fechaInicio">Fecha de Inicio:</label>
            <input type="date" id="fechaInicio" name="fechaInicio" required class="form-control mb-2" />

            <label for="fechaFin">Fecha de Fin:</label>
            <input type="date" id="fechaFin" name="fechaFin" required class="form-control mb-2" />

            <button type="submit" class="btn btn-success">Confirmar Reserva</button>
            <a href="/Reservaciones/Reservar" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
